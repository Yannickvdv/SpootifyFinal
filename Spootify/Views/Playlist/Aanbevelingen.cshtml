@using Spootify.Models
@model List<Song>
@{
    ViewBag.Title = "Aanbevelingen";
}

<h2>Aanbevelingen</h2>
@if (Model.Count != 0)
{
    <ul class="nav nav-pills nav-stacked">
        @foreach (Song song in Model)
        {
            <li role="presentation" class="active">
                <a href="@Url.Action("Index", "Song", new {song.SongID})">@song.Name</a>
            </li>
        }
    </ul>
}
else
{
    <h2>U heeft geen favoriete genres ingesteld of er zijn geen liedjes met uw favoriete genres in de database.</h2>
}




